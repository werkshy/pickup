{
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "recommended": false
      },
      "correctness": {
        "noUnusedVariables": "error"
      },
      "nursery": {
        "noConstAssign": "error",
        "noExplicitAny": "error"
      }
    }
  }
}
